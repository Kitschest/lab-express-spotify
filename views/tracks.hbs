{{#each tracks}}
<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{album.images.[0].url}}" alt="{{album.name}} album cover" class="img-fluid">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">{{artists.[0].name}}</p>
        <audio controls>
          <source src="{{preview_url}}" type="audio/mpeg">
          Your browser does not support the audio tag.
        </audio>
      </div>
    </div>
  </div>
</div>
{{/each}}

