{{#each artists}}
<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{images.[0].url}}" alt="{{name}} album cover" class="img-fluid">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <a href="/albums/{{id}}" class="btn btn-success" style="background-color: #1DB954; border-color: #1DB954;">View Albums</a>
      </div>
    </div>
  </div>
</div>
{{/each}}

